# https://github.com/terraform-providers/terraform-provider-cloudflare/blob/master/renovate.json
{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 2,
  "gomodTidy": true,
  "ignoreDeps": [
    "golang.org/x/crypto", 
    "golang.org/x/sys",
    "golang.org/x/net",
    "github.com/blang/semver"
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@patryk", "@jacobbednarz"]
  },
  "packageRules": [
    {
      "packageNames": ["github.com/aws/aws-sdk-go", "github.com/hashicorp/hcl2"],
      "extends": ["schedule:weekly"]
    }
  ]
}
